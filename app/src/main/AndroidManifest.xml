<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crisisopp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrisisOpp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".login.view.NeedHelpActivity"
            android:theme="@style/Theme.CrisisOpp.NoActionBar"></activity>
        <activity
            android:name=".login.view.LearnMoreActivity"
            android:theme="@style/Theme.CrisisOpp.NoActionBar" />
        <activity
            android:name=".onboarding.view.OnboardingActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.OnBoarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.view.HomeActivity"
            android:noHistory="true" />
        <activity android:name=".logIn.view.LoginActivity" />

        <service
            android:name=".notifications.FirebaseService"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
    </application>

</manifest>