<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/full_name_pcr_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name: "
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/place_of_residency_pcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Of Residency: "
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/phone_number_pcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number "
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/name_of_source_pcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of Source: "
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/blood_type_pcr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type: "
                android:textSize="24sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>