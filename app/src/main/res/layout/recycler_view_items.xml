<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardCornerRadius="3dp"
    android:layout_margin="2dp"
    android:clickable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Name: "
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/family_name_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Family Name: "
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_holder" />

        <TextView
            android:id="@+id/phone_number_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Phone Number: "
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/family_name_holder" />

        <TextView
            android:id="@+id/markazeye_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Markazeya"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_holder"
            app:layout_constraintStart_toEndOf="@+id/divider2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/ayn_wzayn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="5dp"
            android:text="Ayn w Zayn"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/family_name_holder"
            app:layout_constraintStart_toEndOf="@+id/divider2"
            app:layout_constraintTop_toBottomOf="@+id/markazeye_text" />

        <TextView
            android:id="@+id/farah_foundation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Farah"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/phone_number_holder"
            app:layout_constraintStart_toStartOf="@+id/ayn_wzayn_text"
            app:layout_constraintTop_toBottomOf="@+id/ayn_wzayn_text" />

        <ImageView
            android:id="@+id/markazeyye_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/markazeye_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/markazeye_text"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/pending_icon" />

        <ImageView
            android:id="@+id/ayn_wzayn_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/ayn_wzayn_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/markazeyye_icon"
            app:srcCompat="@drawable/approved_icon" />

        <ImageView
            android:id="@+id/farah_foundation_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/farah_foundation_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ayn_wzayn_icon"
            app:srcCompat="@drawable/rejected_icon" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="85dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.542" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/name_holder"
            app:layout_constraintStart_toEndOf="@+id/name_holder" />

        <TextView
            android:id="@+id/person_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/family_name_holder"
            app:layout_constraintStart_toEndOf="@+id/family_name_holder" />

        <TextView
            android:id="@+id/person_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/phone_number_holder"
            app:layout_constraintStart_toEndOf="@+id/phone_number_holder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>